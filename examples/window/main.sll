; Sll Simple Window Example
; @krzem5, 2022-07-08



(---
	"window_manager/event.sll"
	"window_manager/keyboard.sll"
	"window_manager/window.sll"
)



(= window (<- window_manager_window$create [0 0 900 600] nil "Example Window" true))
(= window$callbacks$key_down (,,, window key
	(? (=== key window_manager_keyboard$KEY_ESCAPE) (<- window_manager_window$destroy window))
))
(><
	(<- window_manager_event$poll true)
)

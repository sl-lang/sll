(# sys path)
(--- "sys.sll" "path.sll")

(= fp (<- path$absolute (+ "build" path$separator "sll-ext-" sys$version$major "." sys$version$minor "." sys$version$patch "." sys$library_extension)))
(:> "Extension library: " fp "\n")
(? (! (<- sys$load_library fp)) {
	(:> "Failed to load library!\n")
	(@@@ 1)
})
(:> "Extension library successfully loaded!\n")

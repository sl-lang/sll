(---
	"atexit.sll"
	"audit.sll"
	"file.sll"
	"string.sll"
	"types.sll"
)



(= logger_file (<- file$open "build/audit_log.txt" "w"))
(= max_len 0)



(<- audit$register (,,, nm args
	(? (> ($ nm) max_len) (= max_len ($ nm)))
	(<- file$write logger_file (+
		(<- string$pad_left (+
			nm
			':'
		) (+ max_len 2))
		(<- string$str args)
		'\n'
	))
))
(<- atexit$register (,,,
	(<- file$close logger_file)
))

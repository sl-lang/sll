		sha512$_e
		sha512$_f
		sha512$_g
		sha512$_h
		extra
	))
	(= o "")
	(-> (= i 0) (< i 8) {
		(= n (: sha512_data i))
		(= o (+ o
			(:: (>> n 56) char_type)
			(:: (>> n 48) char_type)

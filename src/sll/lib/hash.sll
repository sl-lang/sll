(= hexdigest (,,, d
	(= l ($ d))
	(= o "")
	(-> (= i 0) (< i l) {
		(= c (: d i))
		(= o (+ o
			(:: (+ (>> c 4) (?: (> (>> c 4) 9) 87 48)) char_type)
			(:: (+ (& c 15) (?: (> (& c 15) 9) 87 48)) char_type)
		))
		(++ i)
	})
	(@@ o)
))




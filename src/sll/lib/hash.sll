	(= n (<< sha512$_sz 3))
	(= extra (+
		extra
		'\x80'
		(* "\x00" padding)
		(:: (>> n 56) char_type)
		(:: (>> n 48) char_type)
		(:: (>> n 40) char_type)
		(:: (>> n 32) char_type)
		(:: (>> n 24) char_type)

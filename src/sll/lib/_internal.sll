(= _PLATFORM (<- (... "sll:sys_get_platform")))

(= _MAX_PATH_SIZE (?:
	(=== _PLATFORM "windows") 256
	(=== _PLATFORM "darwin") 1024
	4096
))

(= _SANDBOX_FLAGS [
	"no-file-io"
	"enable-stdin-io"
	"enable-stdout-io"
	"no-path"
	"no-process"
	"no-environment"
	"no-load-library"
	"buffer-files"
	"file-rename"
	"file-copy"
	"no-float-error-change"
	"file-delete"
	"no-thread"
	"no-random"
	"no-serial"
])



(## _MAX_PATH_SIZE _PLATFORM _SANDBOX_FLAGS)

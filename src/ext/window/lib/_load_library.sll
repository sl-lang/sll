(---
	"audit.sll"
	"path.sll"
	"string.sll"
	"sys.sll"
	"thread.sll"
)



(= library_file_path (<- path$join
	(: (<- path$split sys$LIBRARY) 0)
	(<- string$format "sys_lib/window-%u.%u.%u%s" sys$VERSION$major sys$VERSION$minor sys$VERSION$patch sys$LIBRARY_EXTENSION)
))
(= err (<- sys$load_library library_file_path))
(? err {
	(:> "Error while loading library '" library_file_path "':\n" err '\n')
	(@@ 1)
})

(<- audit$register_event "window.create" "window_id")
(<- audit$register_event "window.destroy" "window_id")
(<- audit$register_event "window.display.enumerate")

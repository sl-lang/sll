(---
	"gfx/_load_library.sll"
	"window/util.sll"
	"window/window.sll"
	"types.sll"
)



(= gfx_module_type (&:
	(~ func_type) create_context
))



(= create_context (,,, window
	(? (! window) (@@ nil))
	(= window (:: window window_window$window_window_type))
	(@@ (<- (... "gfx:context_create")
		window$id
		(<- window_util$get_context)
	))
))



(= gfx (. gfx_module_type
	create_context
))
(## gfx)
